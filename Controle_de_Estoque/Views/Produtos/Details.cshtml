@model Controle_de_Estoque.Models.Produto

@{
    ViewData["Title"] = "Details";
    Dictionary<DateTime, string> lista = (Dictionary<DateTime, string>)ViewBag.motivos;
}

<h1>Detalhes do Produto</h1>

<div>
    @*<h4>Usuario</h4>*@
    <hr />
    <dl class="row">
        @Html.HiddenFor(m => m.IdProduto)
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeProduto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeProduto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescricaoProduto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescricaoProduto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria.NomeCategoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.NomeCategoria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Caixa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Caixa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QtdeProduto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QtdeProduto)
        </dd>
    </dl>
    <br />
    <h5>Histórico de Entradas</h5>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.Entrada.dataEntrada)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Entrada.motivoEntrada)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in lista)
            {
                <tr>
                    <td>@item.Key</td>
                    <td>@item.Value</td>

                </tr>
            }
        </tbody>
    </table>


</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
