@model Controle_de_Estoque.Models.ProdutoViewModel
<h1>Cadastrar Novo Item</h1>
<div class="alert alert-success" role="alert">
    Obaaaaa Chegando item novooo :D
</div>
<br />
@using (Html.BeginForm("Create", "Produtos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.NomeProduto, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.NomeProduto,
                                   new { @class = "form-control", @placeholder = "Nome do produto" })
                @Html.ValidationMessageFor(m => m.NomeProduto, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.QtdeProduto, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.QtdeProduto,
                                   new { @class = "form-control", @placeholder = "Quantidade", @type = "number" })
                @Html.ValidationMessageFor(m => m.QtdeProduto, "", new { @class = "text-danger" })
                <button type="button" class="btn btn-light btn-circle" data-toggle="tooltip" data-placement="right" title="A Quantidade digitada deve ser maior que '0'" style="border-radius: 50%;">
                    !
                </button>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Caixa, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Caixa, new { @readonly = "readonly" })
                <div class="alert alert-warning" role="alert">
                    <strong>@ViewBag.nCaixa </strong>- Imprima uma etiqueta com esse número e cole na caixa arquivo!
                </div>
                @Html.ValidationMessageFor(m => m.Caixa, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.DescricaoProduto, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.DescricaoProduto,
                                   new { @class = "form-control", @placeholder = "Descrição do produto Max. 50 Caracteres", @maxlength = "50" })
                @Html.ValidationMessageFor(m => m.DescricaoProduto, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.IdCategoria, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.IdCategoria,
                                   new SelectList(ViewBag.Categorias, "IdCategoria", "NomeCategoria"),
                                   "Escolha a categoria", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.IdCategoria, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar Produto" class="btn btn-success" />
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>
}
<div>
</div>
